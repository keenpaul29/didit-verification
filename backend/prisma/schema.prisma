// prisma/schema.prisma
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                        String   @id @default(cuid())
  email                     String   @unique
  kycStatus                 String   @default("PENDING")
  kycProvider               String?
  kycCompletedAt            DateTime?
  kycDetails                String?
  tradingEnabled            Boolean  @default(false)
  verificationRetries       Int      @default(0)
  lastVerificationAttempt   DateTime?
  idVerified                Boolean  @default(false)
  phoneVerified             Boolean  @default(false)
  phoneNumber               String?
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt

  @@map("users")
}

// Note: SQLite doesn't support enums, so kycStatus is a String
// Valid values: "PENDING", "VERIFIED", "FAILED"